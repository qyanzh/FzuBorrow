<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.seven.fzuborrow">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.mine.restore.ConfirmRestoreActivity"></activity>
        <activity android:name=".ui.login.UserInfoActivity" />
        <activity android:name=".ui.mine.restore.RestoreActivity" />
        <activity android:name=".ui.notifications.apply.detail.ApplyDetailActivity" />
        <activity android:name=".ui.home.add.AddActivity" />
        <activity android:name=".ui.home.search.GoodSearchActivity" />
        <activity android:name=".ui.notifications.apply.ApplyHistoryActivity" />
        <activity android:name=".ui.notifications.apply.MyApplyActivity" />
        <activity android:name=".ui.community.publish.PublishDiscussActivity" />
        <activity android:name=".ui.mine.MyBorrowDetail" />
        <activity android:name=".ui.mine.MyCreditActivity" />
        <activity android:name=".ui.mine.MineManagerActivity" />
        <activity android:name=".ui.mine.MyBorrowActivity" />
        <activity android:name=".ui.home.detail.GoodDetailActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
    </application>

</manifest>