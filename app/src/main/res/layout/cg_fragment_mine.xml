<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F4F4F4"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:text="我的"
            android:textColor="#000000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/mine_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:text="设置"
            android:textColor="#000000"
            android:textSize="13sp" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_mine_head"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/banner_placeholder" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="45dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="8.8dp"
                android:textColor="#101010"
                android:id="@+id/mine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jamwong"
                android:textSize="21sp" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_marginTop="5.5dp"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_mine_huizhang"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/cg_mine_jiangbei"
                    />

                <TextView
                    android:background="@drawable/cg_text_backgroud"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/mine_huizhang"
                    android:layout_width="80dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="守信达人"
                    android:textSize="15.5sp" />
            </LinearLayout>
            <TextView
                android:textColor="#707571"
                android:id="@+id/mine_number"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="学号：031702525"
                android:layout_width="103dp"
                android:layout_height="19dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="204dp">
        <LinearLayout
            android:background="#FFFFFF"
            android:id="@+id/Li_mine_borrow"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:src="@drawable/cg_zujie"
                android:layout_gravity="center"
                android:layout_marginLeft="36.5dp"
                android:layout_width="26.4dp"
                android:layout_height="26.4dp"/>
            <TextView
                android:text="我租借的"
                android:textColor="#030303"
                android:textSize="15.4sp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginTop="17dp"
                android:layout_marginLeft="220dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/cg_jiantou" />
        </LinearLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:id="@+id/Li_mine_manager"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:src="@drawable/cg_guanli"
                android:layout_width="26.4dp"
                android:layout_height="26.4dp"
                android:layout_gravity="center"
                android:layout_marginLeft="36.5dp" />
            <TextView
                android:text="我管理的"
                android:textColor="#030303"
                android:textSize="15.4sp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginTop="17dp"
                android:layout_marginLeft="220dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/cg_jiantou" />
        </LinearLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:id="@+id/Li_mine_credit"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:src="@drawable/cg_xinyongdu"
                android:layout_gravity="center"
                android:layout_marginLeft="36.5dp"
                android:layout_width="26.4dp"
                android:layout_height="26.4dp"/>
            <TextView
                android:text="信用度"
                android:textColor="#030303"
                android:textSize="15.4sp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginTop="17dp"
                android:layout_marginLeft="234dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/cg_jiantou" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>